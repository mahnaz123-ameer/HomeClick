                            android:fontFamily="@font/comfortaa_regular"
                            android:gravity="center"
                            android:text="2"
                            android:layout_marginStart="21sp"
                            android:layout_marginTop="13sp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

