                                android:textSize="15sp"
                                android:textStyle="bold"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/home_generator"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="110sp"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:gravity="center"
                                    android:layout_centerHorizontal="true"
                                    android:text="Available"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="13sp" />

                            </RelativeLayout>



                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="120sp"
                            android:layout_height="165sp"
                            android:layout_marginEnd="10sp"
                            android:backgroundTint="@color/white"
                            android:elevation="10sp"
                            android:padding="20sp"
                            app:cardCornerRadius="15sp">

                            <ImageView
                                android:layout_width="60sp"
                                android:layout_height="50sp"
                                android:layout_marginStart="30sp"
                                android:src="@drawable/icon_garage"
                                android:padding="5sp"
                                android:layout_marginTop="15sp"/>



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:layout_marginTop="70sp"
                                android:fontFamily="@font/comfortaa_regular"
                                android:gravity="center"
                                android:layout_marginBottom="60sp"
                                android:layout_gravity="center"
                                android:text="@string/garage_space"
                                android:textColor="@color/darker_lavender"
                                android:textStyle="bold"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/home_garage_space"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="110sp"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/comfortaa_regular"
                                    android:gravity="center"
                                    android:text="Available"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" android:textStyle="bold"
                                    />

                            </RelativeLayout>



