<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5FFFFFF"
    tools:context=".activities.ShowAdvertisementDetails">


    <!--    Rent-->


    <include
        android:id="@+id/show_ad_app_bar"
        layout="@layout/app_bar" />

    <include
        android:id="@+id/show_ad_bottom_nav_bar"
        layout="@layout/bottom_nav_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/show_ad_bottom_nav_bar"
        android:layout_below="@id/show_ad_app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/address_portion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:id="@+id/show_details_ad_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="100sp"
                    android:backgroundTint="@color/white"
                    android:elevation="10sp"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="10sp">

                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="15sp"
                        android:src="@drawable/icon_location"
                        android:background="@drawable/circle"
                        android:padding="5sp"/>

                    <TextView
                        android:id="@+id/home_area_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70sp"
                        android:layout_marginTop="15sp"
                        android:fontFamily="@font/comfortaa_regular"
                        android:text="@string/full_name"
                        android:textStyle="bold"
                        android:textColor="@color/darker_lavender"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/home_full_address"
                        android:layout_width="260sp"
                        android:layout_height="40sp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="70sp"
                        android:layout_marginTop="45sp"
                        android:layout_marginBottom="20sp"
                        android:fontFamily="@font/comfortaa_regular"
                        android:text="Full Address"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="normal"/>



                    <TextView
                        android:id="@+id/home_ad_type"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="280sp"
                        android:layout_marginLeft="40sp"
                        android:layout_marginTop="15sp"
                        android:text="Rent"
                        android:fontFamily="@font/comfortaa_bold"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />




                    <LinearLayout
                        android:id="@+id/button_portion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100sp"
                        android:layout_marginStart="30sp"
                        android:orientation="horizontal"
                        android:layout_below="@id/address_portion">

                        <ImageButton
                            android:id="@+id/bookmark_ad"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:padding="10sp"
                            android:layout_marginBottom="10sp"
                            android:src="@drawable/unsave"
                            android:backgroundTint="@color/darker_lavender"
                            android:background="@drawable/shape3"/>

                        <ImageButton
                            android:id="@+id/remove_ad"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:padding="10sp"
                            android:src="@drawable/icon_bookmark"
                            android:backgroundTint="@color/darker_lavender"
                            android:background="@drawable/shape3"/>

                        <ImageButton
                            android:id="@+id/edit_ad"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:clickable="false"
                            android:focusable="false"
                            android:src="@drawable/icon_edit"
                            android:padding="10sp"
                            android:background="@drawable/shape3"
                            android:visibility="gone"
                            android:backgroundTint="@color/darker_lavender"/>

                        <ImageButton
                            android:id="@+id/delete_ad"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:clickable="false"
                            android:padding="10sp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/shape3"
                            android:focusable="false"
                            android:src="@drawable/icon_delete"
                            android:visibility="gone"
                            android:backgroundTint="@color/darker_lavender"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>




            <RelativeLayout

