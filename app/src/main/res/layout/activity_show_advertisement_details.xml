                        android:layout_marginLeft="10sp"
                        android:textAlignment="textStart"
                        android:layout_marginRight="10sp"
                        android:text="Description"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />


                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@color/white"
                        android:padding="5sp"
                        android:hapticFeedbackEnabled="true"
                        android:backgroundTint="@color/black"/>



                </com.ms.square.android.expandabletextview.ExpandableTextView>



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="350sp"
                    android:id="@+id/show_ad_images"
                    android:layout_below="@id/Description"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginBottom="20sp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/call_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/show_ad_images"
                    android:layout_margin="5sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="20sp"
                    android:backgroundTint="@color/white"
                    android:elevation="10sp"
                    app:cardCornerRadius="10sp"
                    android:padding="30sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:layout_marginTop="15sp"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="@string/post_by"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/advertiser_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15sp"
                        android:layout_marginTop="40sp"
                        android:layout_marginBottom="10sp"
                        android:fontFamily="@font/comfortaa_regular"
                        android:text="@string/full_name"
                        android:textColor="@color/darker_lavender"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_marginStart="240sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginEnd="20sp"
                        android:padding="10sp"
                        android:src="@drawable/icon_phone" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>